---
export interface Props {
  title: string;
  subtitle?: string;
  imageUrl: string;
  buttonText?: string;
  buttonUrl?: string;
  overlay?: boolean;
}

const { 
  title, 
  subtitle, 
  imageUrl, 
  buttonText, 
  buttonUrl, 
  overlay = true 
} = Astro.props;
---

<section class="relative">
  <!-- Background image -->
  <div class="absolute inset-0 z-0">
    <img 
      src={imageUrl} 
      alt="" 
      class="object-cover w-full h-full" 
      aria-hidden="true" 
      loading="eager" 
    />
    {overlay && <div class="absolute inset-0 bg-neutral-900 opacity-50"></div>}
  </div>
  
  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 md:px-6 py-24 md:py-32 lg:py-40 text-center">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 drop-shadow-md">
      {title}
    </h1>
    
    {subtitle && (
      <p class="text-xl md:text-2xl text-white mb-8 max-w-2xl mx-auto drop-shadow-md">
        {subtitle}
      </p>
    )}
    
    {buttonText && buttonUrl && (
      <a 
        href={buttonUrl} 
        class="inline-block bg-primary-500 hover:bg-primary-600 text-white font-medium px-6 py-3 rounded-md transition transform hover:scale-105"
      >
        {buttonText}
      </a>
    )}
  </div>
</section>