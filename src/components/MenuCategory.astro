---
import MenuItem from './MenuItem.astro';

export interface Props {
  title: string;
  description?: string;
  items: Array<{
    name: string;
    description?: string;
    price: string;
    image?: string;
    spicy?: boolean;
    vegetarian?: boolean;
    popular?: boolean;
  }>;
}

const { title, description, items } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl md:text-3xl font-bold text-neutral-800 mb-2">{title}</h2>
  
  {description && (
    <p class="text-neutral-600 mb-6 max-w-3xl">{description}</p>
  )}
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {items.map(item => (
      <MenuItem 
        name={item.name}
        description={item.description}
        price={item.price}
        image={item.image}
        spicy={item.spicy}
        vegetarian={item.vegetarian}
        popular={item.popular}
      />
    ))}
  </div>
</section>