---
export interface Props {
  name: string;
  description?: string;
  price: string;
  image?: string;
  spicy?: boolean;
  vegetarian?: boolean;
  popular?: boolean;
}

const { name, description, price, image, spicy, vegetarian, popular } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm hover:shadow-md transition overflow-hidden flex flex-col md:flex-row">
  {image && (
    <div class="md:w-1/3 flex-shrink-0">
      <img 
        src={image} 
        alt={name} 
        class="w-full h-full object-cover aspect-square md:aspect-auto" 
        loading="lazy" 
      />
    </div>
  )}
  
  <div class={`p-4 flex flex-col ${image ? 'md:w-2/3' : 'w-full'}`}>
    <div class="flex items-start justify-between mb-1">
      <h3 class="text-lg font-semibold text-neutral-800 flex items-center">
        {name}
        {popular && (
          <span class="ml-2 px-2 py-0.5 bg-primary-500 text-white text-xs rounded-full">Popular</span>
        )}
      </h3>
      <span class="text-lg font-bold text-primary-500">{price}</span>
    </div>
    
    {description && (
      <p class="text-neutral-600 text-sm flex-grow">{description}</p>
    )}
    
    <div class="flex mt-2 items-center">
      {spicy && (
        <span class="inline-flex items-center text-xs text-primary-600 mr-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
          </svg>
          Spicy
        </span>
      )}
      
      {vegetarian && (
        <span class="inline-flex items-center text-xs text-green-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 2a2 2 0 00-2 2v11a3 3 0 106 0V4a2 2 0 00-2-2H4zm1 14a1 1 0 100-2 1 1 0 000 2zm5-1.757l4.9-4.9a2 2 0 000-2.828L13.485 5.1a2 2 0 00-2.828 0L10 5.757v8.486zM16 18H9.071l6-6H16a2 2 0 012 2v2a2 2 0 01-2 2z" clip-rule="evenodd" />
          </svg>
          Vegetarian
        </span>
      )}
    </div>
  </div>
</div>