---
const currentYear = new Date().getFullYear();

const locations = [
  { name: 'Bloor & Christie', phone: '(416) 537-0972' },
  { name: 'Yonge & Finch', phone: '(647) 430-7458' },
  { name: 'Victoria Park & Sheppard', phone: '(416) 499-1500' },
  { name: 'Richmond Hill', phone: '(905) 237-1009' },
  { name: 'Mississauga', phone: '(905) 276-1957' },
];

const quickLinks = [
  { name: 'Home', url: '/' },
  { name: 'Menu', url: '/menu' },
  { name: 'Locations', url: '/locations' },
  { name: 'About', url: '/about' },
  { name: 'Contact', url: '/contact' },
];

const socialLinks = [
  { name: 'Instagram', url: 'https://instagram.com/', icon: 'instagram' },
  { name: 'Facebook', url: 'https://facebook.com/', icon: 'facebook' },
];

const deliveryPartners = [
  { name: 'Uber Eats', url: 'https://ubereats.com/' },
  { name: 'SkipTheDishes', url: 'https://skipthedishes.com/' },
];
---

<footer class="bg-neutral-800 text-white pt-12 pb-6">
  <div class="container mx-auto px-4 md:px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Logo and Description -->
      <div>
        <div class="flex items-center space-x-2 mb-4">
          <span class="text-xl font-bold text-secondary-300">Buk Chang Dong</span>
          <span class="font-medium text-neutral-300">Soon Tofu</span>
        </div>
        <p class="text-neutral-300 text-sm mb-4">
          Authentic Korean restaurant specializing in Soon Tofu and traditional Korean cuisine since 2005.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map(link => (
            <a 
              href={link.url} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="text-neutral-300 hover:text-white transition"
              aria-label={link.name}
            >
              {link.icon === 'instagram' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {link.icon === 'facebook' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385h-3.047v-3.47h3.047v-2.647c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953h-1.514c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385c5.736-.9 10.125-5.864 10.125-11.854z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Locations -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Our Locations</h3>
        <ul class="space-y-2">
          {locations.map(location => (
            <li>
              <a href={`/locations#${location.name.toLowerCase().replace(/[^a-z0-9]+/g, '-')}`} class="text-neutral-300 hover:text-white transition text-sm">
                {location.name} - {location.phone}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a href={link.url} class="text-neutral-300 hover:text-white transition text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Order Online -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Order Online</h3>
        <p class="text-neutral-300 text-sm mb-4">
          Enjoy our delicious Korean cuisine at home. Order through our delivery partners.
        </p>
        <div class="space-y-2">
          {deliveryPartners.map(partner => (
            <a 
              href={partner.url} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="block bg-white text-neutral-800 hover:bg-neutral-100 px-4 py-2 rounded text-sm font-medium text-center transition"
            >
              {partner.name}
            </a>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="border-t border-neutral-700 mt-8 pt-6 text-neutral-400 text-sm text-center">
      <p>Â© {currentYear} Buk Chang Dong Soon Tofu. All Rights Reserved.</p>
      <p class="mt-1">
        <a href="/privacy" class="hover:text-white transition">Privacy Policy</a> | 
        <a href="/terms" class="hover:text-white transition">Terms of Service</a>
      </p>
    </div>
  </div>
</footer>