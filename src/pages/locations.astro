---

<Layout 
  title="Locations" 
  description="Visit Buk Chang Dong Soon Tofu at our multiple locations across Toronto and the Greater Toronto Area. Find the nearest restaurant to you."
  ogImage="/images/locations-hero.jpg"
>
  <!-- Hero Section -->
  <Hero 
    title="Our Locations" 
    subtitle="Find your nearest Buk Chang Dong Soon Tofu restaurant"
    imageUrl="https://images.pexels.com/photos/2347311/pexels-photo-2347311.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  />
  
  <!-- Locations Grid -->
  <section class="py-12 md:py-16">
    <div class="container mx-auto px-4 md:px-6">
      <div class="grid md:grid-cols-2 gap-8">
        {locations.map(location => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="aspect-w-16 aspect-h-9">
              <iframe 
                src={location.mapUrl} 
                width="100%" 
                height="300" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade"
                title={`Map showing ${location.name} location`}
                class="w-full"
              ></iframe>
            </div>
            
            <div class="p-6">
              <h2 class="text-2xl font-bold text-neutral-800 mb-2">{location.name}</h2>
              <p class="text-neutral-600 mb-4">{location.address}</p>
              
              <div class="space-y-4">
                <!-- Contact -->
                <div>
                  <h3 class="text-lg font-semibold text-neutral-800 mb-2">Contact</h3>
                  <a 
                    href={`tel:${location.phone.replace(/[^0-9]/g, '')}`} 
                    class="text-primary-500 hover:text-primary-600 font-medium transition"
                  >
                    {location.phone}
                  </a>
                </div>
                
                <!-- Hours -->
                <div>
                  <h3 class="text-lg font-semibold text-neutral-800 mb-2">Hours</h3>
                  <dl class="grid grid-cols-2 gap-x-4 gap-y-2 text-sm">
                    <dt class="font-medium text-neutral-600">Monday</dt>
                    <dd>{location.hours.mon}</dd>
                    <dt class="font-medium text-neutral-600">Tuesday</dt>
                    <dd>{location.hours.tue}</dd>
                    <dt class="font-medium text-neutral-600">Wednesday</dt>
                    <dd>{location.hours.wed}</dd>
                    <dt class="font-medium text-neutral-600">Thursday</dt>
                    <dd>{location.hours.thu}</dd>
                    <dt class="font-medium text-neutral-600">Friday</dt>
                    <dd>{location.hours.fri}</dd>
                    <dt class="font-medium text-neutral-600">Saturday</dt>
                    <dd>{location.hours.sat}</dd>
                    <dt class="font-medium text-neutral-600">Sunday</dt>
                    <dd>{location.hours.sun}</dd>
                  </dl>
                </div>
                
                <!-- Order Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 pt-4">
                  <a 
                    href="https://ubereats.com" 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="flex-1 bg-primary-500 hover:bg-primary-600 text-white text-center font-medium px-6 py-3 rounded-md transition"
                  >
                    Order on Uber Eats
                  </a>
                  <a 
                    href="https://skipthedishes.com" 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="flex-1 bg-secondary-500 hover:bg-secondary-600 text-white text-center font-medium px-6 py-3 rounded-md transition"
                  >
                    Order on SkipTheDishes
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Contact CTA -->
  <section class="py-12 md:py-16 bg-neutral-100">
    <div class="container mx-auto px-4 md:px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-neutral-800 mb-4">Questions?</h2>
